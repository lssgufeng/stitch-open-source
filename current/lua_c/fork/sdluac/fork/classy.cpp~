#include <iostream>
#include <stdio.h>
#include <string.h>
#include <lua.hpp>
#include <cstdlib>
#include <SDL/SDL.h>
#include "sdluac.h"
using namespace std;






int main(int argc, char ** argv){
sdluac coreluac;
coreluac.Event = NULL;
lua_State *L;
L = lua_open();
luaL_openlibs(L);
if(argc == 1){
cout<<"Use -l or -ls or -h!\n";
}
coreluac.init();
for(int x=0;x!=1;){
coreluac.loop(argc,L,argv);
while(SDL_PollEvent(coreluac.Event)){
if(coreluac.Event->type == SDL_QUIT) {
        coreluac.running = false;
	SDL_Quit();
    }
}
}
lua_close(L);
}
